<header>
  <!-- Fixed navbar -->
  <nav class="navbar navbar-expand-md navbar-light fixed-top bg-light">
    <div class="container-fluid">
      <%= link_to "BakeryStoreFront", root_path, {class: 'navbar-brand'} %>
      <div class="d-flex flex-row order-2 order-md-3">
        <ul class="navbar-nav flex-row">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "My cart", edit_shopping_cart_path(current_user.shopping_cart) %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, {class: 'nav-link'} %>
            </li>
          <% end %>
        </ul>
        <%= content_tag("span", class:'navbar-toggler collapsed mr-3', 'data-bs-toggle' => 'collapse', 'data-bs-target' => '#navbarCollapse', 'aria-controls' => "navbarCollapse", 'aria-expanded' => false, 'aria-label' => "Toggle navigation") do %>
          <i class="bi bi-list"></i>
        <% end %>
      </div>
      <div class="navbar-collapse collapse order-3 order-md-2" id="navbarCollapse" style="">
        <ul class="navbar-nav me-auto mb-md-0 text-end">
          <li class="nav-item">
            <%= link_to "Products", products_path, { class: 'nav-link'} %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
