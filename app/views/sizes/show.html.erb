<% if notice %>
  <div class='<%= notice["class"] %>'>
    <b><%= notice["message"] %></b>
  </div>
<% end %>

<p>
  <strong><%= "#{@size.class.human_attribute_for :name}:" %></strong>
  <%= @size.name %>
</p>

<p>
  <strong><%= "#{@size.class.human_attribute_for :description}:" %></strong>
  <%= @size.description %>
</p>

<%= link_to t('navigation.links.edit'), edit_size_path(@size) %> |
<%= link_to t('navigation.links.back'), sizes_path %>
