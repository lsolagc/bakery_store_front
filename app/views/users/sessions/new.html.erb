<h2><%= t('devise.sessions.new.sign_in') %></h2>

<%= simple_form_for @user, url: user_session_path(@user) do |f| %>

  <%= f.input :email, wrapper_html: { class: 'row align-items-center my-3'}, input_html: {class: 'col', style:'margin-right: 15px'}, label_html: { class: 'col-4'} %>
  <%= f.input :password, wrapper_html: { class: 'row align-items-center my-3'}, input_html: {class: 'col', style:'margin-right: 15px'}, label_html: { class: 'col-4'} %>

  <%= f.input :remember_me, as: :boolean%>
  <%= f.button :submit, t('devise.sessions.new.sign_in'), class: 'btn btn-primary' %>

<% end %>

<%= render "users/shared/links" %>
