<%= simple_form_for(rating, method: :post, url: product_ratings_path(rating.product), html: {class: ''}, remote: true) do |f| %>

  <%= f.input :score, collection: 1..5 %>
  <%= f.input :comment %>

  <div class="mt-3">
    <%= f.submit :submit, value: t('form.ratings.submit'), class: 'btn btn-primary', data: { disable_with: t('form.data.disable_with.saving') } %>
  </div>

<% end %>
